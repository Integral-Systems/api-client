meta {
  name: Verify snapshot repo
  type: http
  seq: 11
}

post {
  url: {{host}}/_snapshot/backup/_verify
  body: json
  auth: basic
}

headers {
  Content-Type: application/json
}

auth:basic {
  username: {{admin_user}}
  password: {{admin_pass}}
}

body:json {
  {
      "type": "fs",
      "settings": {
          "location": "/data/elastic-backup",
          "compress": true
      }
  }
}
